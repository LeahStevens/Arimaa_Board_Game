.contain-to-grid.fixed
  nav.top-bar
    ul.title-area
      li.name
        h1: a(href="/") Home
      li.name
        h1: a(href="/game") Play
      li.name
        h1: a(href="/rules") Rules
      li.name
        h1: a(href="http://arimaa.com/arimaa/") Official Arimaa Site
      li.toggle-topbar.menu-icon
        a(href="#")
          span Menu

    section.top-bar-section
      ul.left
      ul.right
        li.divider
        if player
          li.has-form: a#authentication-button.button.round.radius.alert(href="#", data-email=player.email)= 'Logout '+player.email
        else
          li.has-form: a#authentication-button.button.round.radius(href="#", data-email="anonymous") Login | Sign Up
